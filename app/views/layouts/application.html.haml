!!! 5
%html{:lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title Ruby on Rails user group Schweiz
    = csrf_meta_tags
    = stylesheet_link_tag :application

    %link{:href => asset_url('favicon.png'), :rel => 'icon', :type => 'image/png'}/

    %meta{:content => 'IE=edge,chrome=1', :'http-equiv' => 'X-UA-Compatible'}/
    %meta{:content => "text/html; charset=utf-8", :'http-equiv' => "Content-Type"}/

    %meta{:name=>"apple-mobile-web-app-capable", :content=>"yes"}
    %meta{:name=>"viewport", :content=>"width=device-width, minimum-scale=1.0, initial-scale=1.0"}

  %body
    .container
      %header.row
        .col-md-2.text-right
          = image_tag 'logo.png', :size => '100x113', :id => 'logo'
        .col-md-10
          %h1 Ruby on Rails Meetups
          %p.lead Schweiz

      = yield

    -#= javascript_include_tag 'application'
